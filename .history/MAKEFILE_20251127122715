# careful: kills whatever is listening on 3000

start-service:
	node server.js

stop-service:
	sudo fuser -k 3001/tcp

run-extractor:
	# run extractor and show stdout/stderr
	node extractor.js 2>&1 | sed -n '1,200p'
	# check the JSON file the extractor should write
	ls -l parking-status.json
	head -c 400 parking-status.json || true
	# validate JSON (if jq installed)
	jq . parking-status.json | sed -n '1,40p' || true

